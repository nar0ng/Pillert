<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp">

    <TextView
        android:id="@+id/text_email_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="10dp"
        android:text="이메일로 \n회원가입"
        android:textColor="@color/black"
        android:textSize="38dp"
        android:textStyle="bold" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_below="@id/text_email_signin"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/text_email_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"
        android:layout_marginTop="8dp"
        android:text="이메일 입력"
        android:textSize="24dp"/>

    <EditText
        android:id="@+id/signinEmail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/edittext_border"
        android:hint="   example@email.com"
        android:layout_below="@id/text_email_input"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/text_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signinEmail"
        android:layout_marginTop="8dp"
        android:text="비밀번호 입력"
        android:textSize="24dp"/>

    <EditText
        android:id="@+id/signinPw"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/edittext_border"
        android:inputType="textPassword"
        android:hint="   **********"
        android:layout_below="@id/text_password"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/signBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/signinPw"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_btn"
        android:textColor="@color/white"
        android:text="회원 가입"
        android:textSize="24dp"
        />

    <Button
        android:id="@+id/goAuthHome"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/signBtn"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_btn"
        android:textColor="@color/white"
        android:text="돌아가기"
        android:textSize="24dp"
        />

</RelativeLayout>
