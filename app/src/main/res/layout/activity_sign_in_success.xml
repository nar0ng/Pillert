<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp">

    <TextView
        android:id="@+id/success_msg_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="5dp"
        android:text="회원가입 완료! \n회원이 되신 것을 \n환영합니다 "
        android:textColor="@color/black"
        android:textSize="38dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/success_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/success_msg_title"
        android:layout_marginTop="8dp"
        android:text="이제 이메일 로그인에서 로그인을 \n할 수 있습니다. "
        android:textSize="24dp"/>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_below="@id/success_msg"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/button_auth"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/line"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_btn"
        android:textColor="@color/white"
        android:text="첫 화면으로"
        android:textSize="24dp"
        />

    <Button
        android:id="@+id/button_emaillogin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/button_auth"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_btn"
        android:textColor="@color/white"
        android:text="이메일 로그인"
        android:textSize="24dp"
        />

</RelativeLayout>
